{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "types": ["node", "@playwright/test"],
    "resolveJsonModule": true
  },
  "include": ["tests/**/*.ts", "src/**/*.ts", "playwright.config.ts", "reporters/**/*.ts"]
}
